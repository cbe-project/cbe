
exec rm -rf var/libcache/cbe
exec rm -rf var/libcache/cbe_cxx
exec rm -rf var/libcache/external_crypto
exec rm -rf var/libcache/external_crypto_cxx

#
# To enable writing the initial phys block-dev state to a linux file,
# switch the first return value to 1 and build with 'KERNEL=linux BOARD=linux'.
# The result can be found in <BUILD_DIR>/var/run/cbe/genode/lx_block.img .
#
proc write_init_state_to_lx_file { } {
	if {[have_spec linux]} {
		return 0;
	} else {
		return 0;
	}
}

proc cbe_block_size_mb { } { return 512 }

append build_components {
	core init timer
	server/ram_block
	server/cbe
	server/cbe_block
	app/block_tester
	server/log_terminal
	server/report_rom
}

if {[write_init_state_to_lx_file]} {
	append build_components { server/lx_block }
}

build $build_components

create_boot_directory

append config {
<config verbose="yes">
	<parent-provides>
		<service name="ROM"/>
		<service name="RAM"/>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
	</parent-provides>

	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

	<default caps="100"/>
	<start name="timer">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Timer"/></provides>
	</start>

	<start name="report_rom">
		<resource name="RAM" quantum="32M"/>
		<provides> <service name="Report"/> <service name="ROM"/> </provides>
		<config verbose="yes"/>
	</start>

	<start name="log_terminal">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Terminal"/></provides>
	</start>

	<start name="cbe_block">
		<resource name="RAM" quantum="1G"/>
		<provides><service name="Block"/></provides>
		<config
			report="no"
			verbose="no"
			backing_size="} [cbe_block_size_mb] {M"
			vbd_size="2M"
			vbd_outer_degree="64"
			ft_size="1M"
			ft_outer_degree="64"
			initialize="yes"
			write_init_state_to_block="}

if {[write_init_state_to_lx_file]} {
	append config {yes}
} else {
	append config {no}
}
append config {"/>

		<route>
			<service name="Block"> <child name="lx_block"/> </service>
			<service name="Report"> <child name="report_rom"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="cbe">
		<resource name="RAM" quantum="4M"/>
		<provides><service name="Block"/></provides>
		<config show_progress="no" sync_interval="1"/>
		<route>
			<service name="Block"> <child name="cbe_block"/> </service>
			<service name="Terminal"> <child name="log_terminal"/> </service>
			<service name="Timer"> <child name="timer"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>}

if {[write_init_state_to_lx_file]} {
append config {

	<start name="lx_block" ld="no">
		<resource name="RAM" quantum="2M"/>
		<provides> <service name="Block"/> </provides>
		<config file="lx_block.img" block_size="4K" writeable="yes"/>
	</start>}
}

