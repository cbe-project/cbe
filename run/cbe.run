install_config $config

append boot_modules {
	core init timer ram_block block_tester cbe_block cbe
	ld.lib.so spark.lib.so libsparkcrypto.lib.so
	log_terminal report_rom
}

if {[write_init_state_to_lx_file]} {
	append boot_modules { lx_block }
}

build_boot_image $boot_modules

exec rm -rf [run_dir]/genode/lx_block.img
if {[write_init_state_to_lx_file]} {
	exec truncate -s [cbe_block_size_mb]M [run_dir]/genode/lx_block.img
}

append qemu_args " -nographic -m 1280 "

run_genode_until {.*child "block_tester" exited with exit value 0.*\n} 240
